pinkOrange = #FF7B73
lighterp = #FC9F9D
lightest = #FCD5D3

flexCenter(direction=row)
  display flex
  align-items center
  justify-content center
  flex-direction direction

fullSize()
  width 100%
  height 100%
  
*
  margin 0
  padding 0
  outline none
  
.wrapper
  height 100vh
  background-color pinkOrange
  flexCenter()
  font-size 20px
  font-family sans-serif
  
.form-wrapper
  background-color #fff
  border-radius 50px
  transition .3s cubic-bezier(0.26, 0.87, 0.51, 1.18) width
  width 150px
  height 50px
  &.expanded
    width 300px
    .status
      display none
    form
      display block
  &.sent
    .status
      display flex
      .thank-you
        display block
        animation .2s .3s comeDown cubic-bezier(0, 0.15, 0.09, 1.63) forwards
      .notify-me
        display none
    form
      display none
  &.expanded.sent
    .status
      display none
    form
      display block
      input
        opacity 0

      
form
  position relative
  fullSize()
  transition .3s ease width
  input[type='email']
    border 0
    height 100%
    width calc(100% - 80px)
    padding 20px 0 20px 20px
    background transparent
    z-index 2
    font-weight 600
    color pinkOrange
    position relative
    box-sizing border-box
  input[type="submit"]
    font-family sans-serif
    font-size 20px
    color lightest
    z-index 3
    transition .3s linear color
  &.correct input[type='submit']
    cursor pointer
    
  #send
    position absolute
    top 7%
    right 5px
    background pinkOrange
    border 0
    height 86%
    border-radius 50px
    width 80px
    transition .3s cubic-bezier(0, 0.57, 0.52, 1.32) all
    transform scale(0)
    animation pop .3s .3s cubic-bezier(0, 0.37, 0.38, 1.41) forwards
    
    
 form.focused
   .fake-place-holder
     transform scale(.5)
     opacity 0
    
.fake-place-holder
   position absolute
   height 100%
   flexCenter()
   top 0
   left 20px
   color lighterp
   transform scale(0)
   animation pop .3s .3s cubic-bezier(0, 0.37, 0.38, 1.41) forwards
   transition .3s cubic-bezier(0, 0.37, 0.31, 1.04) all
      
form
   display none
   transition .4s cubic-bezier(0, 0.37, 0.31, 1.04) all
   
form.correct input[type="submit"]
    color #fff
    
.status
  fullSize()
  flexCenter()
  color pinkOrange
  transition .2s cubic-bezier(0, 0.37, 0.31, 1.04) all
  .notify-me
    fullSize()
    flexCenter()
    cursor pointer
  .thank-you
    display none
    opacity 0
    transform translateY(-100%)

.form-wrapper
  &.sent
    .thank-you
      display inline
   
.inspired 
  position: absolute;
  bottom: 10px;
  font-size: 13px;
  color: #8e443f;
  width: 100%;
  text-align: center;

  
@keyframes pop
  to
    transform scale(1)

@keyframes comeDown
  to
    opacity 1
    transform translateY(0)
