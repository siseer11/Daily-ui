bg-gray = #f7f7f7
light-gray = #ededed
gray = #8d867e
red = #eb4747
green = #47e0b0

flexCenter()
  display flex
  align-items center
  justify-content center
  

*
  margin 0
  padding 0
  font-family sans-serif
  outline none
  
.wrapper
  width 100%
  height 100vh
  flexCenter()
  background-color bg-gray
  
svg 
  width 30px

#check-mark    
  position: absolute;
  top calc(50% - 9px)
  left calc(50% - 15px)
  stroke-dasharray 166px
  stroke-dashoffset 175px

.form-wrapper
  overflow hidden
  position relative
  
.form-wrapper,
.pop-form
  color #fff
  background-color light-gray
  width 250px
  height 60px
  border-radius 50px
  flexCenter()
  
.pop-form
  z-index 3
  background-color red
  font-weight 600
  cursor pointer
  
.done
    width 100%
    height 100%
    position absolute
    flexCenter()
    background-color light-gray
    color gray
    padding 0px 30px 0px 60px
    text-align center
    box-sizing border-box
    font-weight 600
    opacity 0
  
form
  width 100%
  height 100%
  position absolute
  top 0
  z-index 1
  left 0
  input[type='email']
    width 100%
    height 100%
    border none
    background light-gray
    color gray
    padding 0 60px 0 20px
  .submit-wrapper
    position absolute
    top 0
    right 0
    width 60px
    height 60px
    border-radius 50%
    background-color red
    flexCenter()
    svg#plane
      fill #fff
      width 20px
      transform translate(-100px , 100px)
      transition .3s .6s cubic-bezier(0.07, 0.35, 0.27, 1.26) all
    input[type='submit']
      position absolute
      top 0
      left 0
      width 100%
      height 100%
      border none
      background transparent
      border-radius 50%
      cursor pointer
      z-index 2
      
.wrapper.open
  .pop-form
    transform translateX(100%)
    transition .3s .3s cubic-bezier(0, 0, 0, .5) all
  .pop-form p
    opacity 0
    transition .4s cubic-bezier(0, 0, 0, 1.2) all
  svg#plane
    transform translate(-2px , 0)

.wrapper.open.sent
  input[type='email']
    opacity 0
    transition 0.4s .5s cubic-bezier(0, 0.58, 0.55, 1.15) opacity
  input[type='submit']
    display none
  svg#plane
    transition 0.4s cubic-bezier(0.57, -0.79, 0.22, 1.2) all
    transform translate(50px , -50px)
  form .submit-wrapper
    right calc(100% - 60px)
    background green
    transition 0.4s .5s cubic-bezier(0, 0.58, 0.55, 1.15) all
  #check-mark
    transition .3s .9s all linear
    stroke-dashoffset 0px
  .done
    transition .3s .5s all linear
    opacity 1
    
 form .submit-wrapper svg#plane.correctFilled
   transition 0s
   opacity 1
   animation shake .5s cubic-bezier(0.33, 0.26, 0.32, 0.85) infinite alternate
    
 @keyframes shake
   0%
     transform translate(-2px,0px)
   50%
     transform translate(-3px,-3px)
   100%
     transform translate(2px,1px)